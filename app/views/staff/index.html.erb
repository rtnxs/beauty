<div class="row">
  <div class="col-lg-6">
    <h1>Список всех визитов</h1>

    <table class="table table-hover">
      <thead class="thead-light">
      <tr>
        <th scope="col">Имя клиента</th>
        <th scope="col">Время визита</th>
        <th scope="col">Цена визита</th>
      </tr>
      </thead>

      <tbody>
      <% @visits.each do |visit| %>
        <tr>
          <td class="align-middle"><%= visit.client.name %></td>
          <td class="align-middle"><%= visit.datetime.strftime('%Y.%m.%d %H:%M') %></td>
          <td class="align-middle"><%= visit.visit_price %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-lg-6">
    <h1>Расходы</h1>

    <table class="table table-hover">
      <thead class="thead-light">
      <tr>
        <th scope="col">Тип</th>
        <th scope="col">Название</th>
        <th scope="col">Цена</th>
        <th scope="col">Дата</th>
      </tr>
      </thead>

      <tbody>
      <% @expenses.each do |expense| %>
        <tr>
          <td class="align-middle"><%= expense.type_id %></td>
          <td class="align-middle"><%= expense.name %></td>
          <td class="align-middle"><%= expense.price %></td>
          <td class="align-middle"><%= expense.datetime.strftime('%Y.%m.%d %H:%M') %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
