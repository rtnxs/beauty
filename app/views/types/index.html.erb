<h1>Тип расходов</h1>
<p>
  <%= link_to 'Добавить новую запись', new_type_path, class: 'btn btn-success' %>
</p>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">Название</th>
      <th scope="col">Опции</th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td class="align-middle"><%= type.name %></td>
        <td>
          <%= link_to 'Изменить', edit_type_path(type), class: 'btn btn-outline-warning btn-block' %><br>
          <%= link_to 'Удалить', type, method: :delete, data: { confirm: 'Уверены?' }, class: 'btn btn-outline-danger btn-block' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

