<p></p>

<h1>Список клиентов</h1>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">Имя</th>
      <th scope="col">Телефон</th>
      <th scope="col">Примечание</th>
      <th scope="col">Опции</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td class="align-middle"><%= client.name %></td>
        <td class="align-middle"><%= client.phone %></td>
        <td class="align-middle"><%= client.note %></td>
        <td>
          <%= link_to 'Изменить', edit_client_path(client), class: 'btn btn-outline-warning btn-block' %><br>
          <%= link_to 'Удалить', client, method: :delete, data: { confirm: 'Уверены?' }, class: 'btn btn-outline-danger btn-block' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
