<p>
  <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#searchFields" aria-expanded="false" aria-controls="collapseExample">
    Нажми для поиска
  </button>
</p>
<div class="collapse" id="searchFields">
  <%= search_form_for @q do |f| %>
    <div class="row align-items-center mt-5">
      <div class="col-lg-6">
        <%=  f.label 'Имя' %>
        <%= f.search_field :name_cont, class: 'form-control' %>
      </div>
      <div class="col-lg-6">
        <%=  f.label 'Телефон' %>
        <%= f.search_field :phone_cont, class: 'form-control' %>
      </div>
    </div>
    <div class="row align-items-center mt-3">
      <div class="col-lg-12 mx-auto">
        <%= f.submit "Поиск", class: 'btn btn btn-info btn-block' %>
      </div>
    </div>
    <div class="row align-items-center mt-3 mb-5">
      <div class="col-lg-12 mx-auto">
        <%= link_to "Сброс", clients_path, class: 'btn btn btn-outline-warning btn-block' %>
      </div>
    </div>
  <% end %>
</div>

<h1>Список клиентов</h1>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">Имя</th>
      <th scope="col">Телефон</th>
      <th scope="col">Примечание</th>
      <th scope="col">Опции</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td class="align-middle"><%= client.name %></td>
        <td class="align-middle"><%= client.phone %></td>
        <td class="align-middle"><%= client.note %></td>
        <td>
          <%= link_to 'Изменить', edit_client_path(client), class: 'btn btn-outline-warning btn-block' %><br>
          <%= link_to 'Удалить', client, method: :delete, data: { confirm: 'Уверены?' }, class: 'btn btn-outline-danger btn-block' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
