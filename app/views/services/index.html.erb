<h1>Услуги</h1>
<p>
  <%= link_to 'Добавить новую запись', new_service_path, class: 'btn btn-success' %>
</p>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">Название</th>
      <th scope="col">Цена</th>
      <th scope="col">Опции</th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td><%= service.price %></td>
        <td>
          <%= link_to 'Изменить', edit_service_path(service), class: 'btn btn-outline-warning btn-block' %><br>
          <%= link_to 'Удалить', service, method: :delete, data: { confirm: 'Уверены?' }, class: 'btn btn-outline-danger btn-block' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

