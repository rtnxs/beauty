<%= search_form_for @q do |f| %>
  <%#= f.label :visit_price_eq %>
  <%#= f.search_field :visit_price_eq %>
  <%=  f.label 'Date Vibery' %>
  <%= f.search_field :created_at_gteq, class: 'form-control', data: { behavior: "flatpickr" } %>
  <%= f.search_field :created_at_lteq, class: 'form-control', data: { behavior: "flatpickr" } %>
  <%= f.submit %>
<% end %>

<h1>Список всех визитов</h1>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">Имя клиента</th>
      <th scope="col">Время визита</th>
      <th scope="col">Цена визита</th>
      <th scope="col">Примечание</th>
      <th scope="col">Опции</th>
    </tr>
  </thead>

  <tbody>
    <% @visits.each do |visit| %>
      <tr>
        <td><%= visit.client.name %></td>
        <td><%= visit.datetime %></td>
        <td><%= visit.visit_price %></td>
        <td><%= visit.note %></td>
        <td>
          <%= link_to 'Изменить', edit_visit_path(visit), class: 'btn btn-outline-warning btn-block' %><br>
          <%= link_to 'Удалить', visit, method: :delete, data: { confirm: 'Уверены?' }, class: 'btn btn-outline-danger btn-block' %>
        </td>
      </tr>
    <% end %>
  </tbody>


</table>
