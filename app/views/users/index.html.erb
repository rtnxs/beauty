<h1>Список всех сотрудников</h1>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Пароль</th>
      <th scope="col">Admin</th>
      <th scope="col">Опции</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= user.admin %></td>
        <td>
          <%= link_to 'Изменить', edit_user_path(user), class: 'btn btn-outline-warning btn-block' %><br>
          <%= link_to 'Удалить', user, method: :delete, data: { confirm: 'Уверены?' }, class: 'btn btn-outline-danger btn-block' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить сотрудника', new_user_path %>
